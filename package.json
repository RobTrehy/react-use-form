{
  "name": "@alfonsobries/react-use-form",
  "version": "0.1.18",
  "description": "React hook for handling Laravel form requests and validation (for React & React Native)",
  "keywords": [
    "react",
    "react-native",
    "form",
    "validation",
    "laravel"
  ],
  "types": "./dist/index.d.ts",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    }
  },
  "author": "Alfonso Bribiesca <alfonso@vexilo.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alfonsobries/react-use-form"
  },
  "license": "MIT",
  "private": false,
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "lint:fix": "eslint ./src --ext .jsx,.js,.ts,.tsx --quiet --fix --ignore-path ./.gitignore",
    "lint:format": "prettier --loglevel warn --write \"./**/*.{js,jsx,ts,tsx,css,md,json}\" --ignore-path ./.gitignore",
    "lint": "npm run lint:format && npm run lint:fix ",
    "release": "release-it",
    "prepare": "npm i && npm run build"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.6",
    "@testing-library/dom": "^10.3.1",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/ws": "^8.5.11",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "@vitejs/plugin-react": "^1.3.0",
    "@vitest/ui": "latest",
    "axios-mock-adapter": "^1.20.0",
    "c8": "^7.11.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jsdom": "^19.0.0",
    "path": "^0.12.7",
    "prettier": "^2.6.1",
    "react-dom": "^18.0.0",
    "react-test-renderer": "^18.3.1",
    "release-it": "^14.14.0",
    "rollup": "^2.70.1",
    "tslib": "^2.3.1",
    "typescript": "^4.6.3",
    "vite": "^2.9.0",
    "vitest": "^2.0.3"
  },
  "peerDependencies": {
    "axios": "^1.7.0",
    "react": "^18.0.0"
  },
  "release-it": {
    "hooks": {
      "before:init": [
        "npm run coverage",
        "npm run lint"
      ],
      "after:bump": "npm run build"
    }
  }
}
